{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Identifiant</th>
                <td>{{ animal.Identifiant }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ animal.Nom }}</td>
            </tr>
            <tr>
                <th>DateDeNaissance</th>
                <td>{{ animal.DateDeNaissance ? animal.DateDeNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateArriverZoo</th>
                <td>{{ animal.DateArriverZoo ? animal.DateArriverZoo|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateDepart</th>
                <td>{{ animal.DateDepart ? animal.DateDepart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ZooProprio</th>
                <td>{{ animal.ZooProprio ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ animal.Genre }}</td>
            </tr>
            <tr>
                <th>Espece</th>
                <td>{{ animal.Espece }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ animal.Sexe }}</td>
            </tr>
            <tr>
                <th>Steril</th>
                <td>{{ animal.Steril ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PeutEtreQuarantaine</th>
                <td>{{ animal.PeutEtreQuarantaine ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_animal_index') }}">back to list</a>

    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>

    {{ include('animal/_delete_form.html.twig') }}
{% endblock %}
